{
  "version": 2,

  "builds": [
    {
      "src": "nexus/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12",
        "buildCommand": "bash install.sh"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"

    }
  ],
  "routes": [
    {

      "src": "/(.*)",
      "dest": "/nexus/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    }
  ]
}

